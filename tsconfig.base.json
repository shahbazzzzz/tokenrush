{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@tokenrush/shared": ["packages/shared/src/index.ts"],
      "@tokenrush/shared/*": ["packages/shared/src/*"]
    }
  }
}
